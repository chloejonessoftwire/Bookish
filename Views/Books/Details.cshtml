@model Book

<div class="text-center">
    <h1 class="display-4">@Model.Title</h1>

    <table class="table table-striped table-bordered">
    <tr> 
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Year</th>
    </tr>
    <tr>
        <td> @Model.BookId </td>
        <td> @Model.Title</td>
        <td> @Model.Author</td>
        <td> @Model.Year </td>
    </tr>
</table>
</div>